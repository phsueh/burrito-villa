generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  url = env("LOCAL_POSTGRES_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Order {
    id         Int @id @default(autoincrement())
    items      OrderItem[]
    totalCost  Float
}

model OrderItem {
    id          Int @id @default(autoincrement())
    burrito     String
    // option Option[]
    quantity    Int
    order       Order @relation(fields: [orderId], references: [id])
    orderId     Int
}

model Burrito {
    id          Int @id @default(autoincrement())
    name        String
    size        String
    option      String[] // remove this and add to orderItem
    price       Float
}

model Option {
    id          Int @id @default(autoincrement())
    name        String
}